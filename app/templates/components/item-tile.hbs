  <div class="thumbnail">
    <img class="pictures" src={{item.image}} alt={{item.name}}>
    <div class="caption">
      <h3>{{item.name}}</h3>
      <ul>
        <li>${{item.price}}
        <button {{action 'addToCart' item}}>Add to Cart</button></li>
      </ul>
    </div>
  </div>

  <h4>{{display-cart item=item}}</h4>
